<?xml version="1.0" encoding="UTF-8" ?>
<!--
===================================================================

    用法：cd到项目根目录下运行命令 mvn mybatis-generator:generate
        或 在IDE中新增一个maven配置 目录为当前项目根目录 命令行为上面的命令行

===================================================================
-->
<!DOCTYPE generatorConfiguration PUBLIC
    "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>


    <!-- 数据库驱动包位置 -->
    <classPathEntry
        location="/opt/apache-maven-3.5.4/download/mysql/mysql-connector-java/6.0.6/mysql-connector-java-6.0.6.jar"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- TKmybatis配置 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
        </plugin>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!-- 数据库链接URL、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
            connectionURL="jdbc:mysql://127.0.0.1:3306/theOlds?useUnicode=true&amp;useSSL=false&amp;characterEncoding=UTF-8&amp;tinyInt1isBit=false&amp;nullNamePatternMatchesAll=true"
            userId="root" password="root"/>
        <!-- 生成模型的包名和位置 targetProject是相对路径或绝对路径-->
        <javaModelGenerator targetPackage="com.theoldsweb.myweb.common.entity"
            targetProject="src/main/java"/>
        <!-- 生成的映射文件包名和位置 targetProject是相对路径或绝对路径-->
        <sqlMapGenerator targetPackage="sqlMap" targetProject="src/main/resources"/>
        <!-- 生成service的包名和位置 targetProject是相对路径或绝对路径-->
        <javaClientGenerator targetPackage="com.theoldsweb.myweb.web.mapper"
            targetProject="src/main/java" type="XMLMAPPER"/>

        <!-- 要生成的表（可以使用多个table标签生成多张表） -->
        <!--<table tableName="connect_dict_data_convert"-->
            <!--domainObjectName="ConnectDictDataConvert"></table>-->

        <!--<table tableName="connect_biz_data_convert"-->
            <!--domainObjectName="ConnectBizDataConvert"></table>-->

        <!--<table tableName="connect_origin_data" domainObjectName="ConnectOriginData"></table>-->

        <!--<table tableName="retail_module" domainObjectName="RetailModule"></table>-->

        <!--<table tableName="connect_task" domainObjectName="ConnectTask"></table>-->

        <!--<table tableName="work_order_install_state"-->
            <!--domainObjectName="WorkOrderInstallState"></table>-->

        <table tableName="user_table" domainObjectName="usertable"></table>
    </context>
</generatorConfiguration>